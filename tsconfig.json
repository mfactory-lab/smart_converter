{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types/", "./types", "./node_modules"],
    "types": ["node"],
    "strict": true,
    "pretty": true,
    "declaration": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "vitest.config.mts",
    "packages/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["packages/*/dist"]
}
